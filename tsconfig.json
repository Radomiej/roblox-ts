{
	"compilerOptions": {
		"declaration": true,
		"module": "commonjs",
		"target": "ES2020",
		"lib": ["ES2020"],
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"removeComments": true,
		"forceConsistentCasingInFileNames": true,
		"composite": true,
		"sourceMap": true,
		"outDir": "out",
		"baseUrl": "src",
		"paths": {
			"*": ["*"]
		},
		"plugins": [
			{
				"transform": "typescript-transform-paths",
				"exclude": ["**/node_modules/**"]
			},
			{
				"transform": "typescript-transform-paths",
				"exclude": ["**/node_modules/**"],
				"afterDeclarations": true
			}
		]
	},
	"files": [],
	"references": [
		{ "path": "./src/Shared" },
		{ "path": "./src/CLI" },
		{ "path": "./src/Project" },
		{ "path": "./src/TSTransformer" }
	]
}
